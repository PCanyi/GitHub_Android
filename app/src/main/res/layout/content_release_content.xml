<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            style="@style/CardView"
            android:layout_margin="@dimen/components_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="@dimen/components_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/release_avatar_IV"
                    android:layout_width="@dimen/nav_header_image_size"
                    android:layout_height="@dimen/nav_header_image_size" />

                <LinearLayout
                    android:padding="@dimen/components_padding"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatTextView
                        android:textColor="@color/colorPrimary"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:id="@+id/release_username_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/components_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/ic_tag"
                            android:layout_width="@dimen/small_image_size"
                            android:layout_height="@dimen/small_image_size" />

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_marginLeft="@dimen/components_margin"
                            android:id="@+id/release_tag_TV"
                            style="@style/Base.TextAppearance.AppCompat.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:layout_marginLeft="@dimen/components_margin"
                            android:src="@drawable/ic_access_time"
                            android:layout_width="@dimen/small_image_size"
                            android:layout_height="@dimen/small_image_size" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/release_time_TV"
                            style="@style/Base.TextAppearance.AppCompat.Body1"
                            android:layout_marginLeft="@dimen/components_margin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/CardView"
            android:layout_margin="@dimen/components_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="@dimen/components_padding"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatTextView
                    android:textColor="@color/colorPrimary"
                    android:text="@string/release_notes"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/release_body_TV"
                    android:layout_marginTop="@dimen/components_margin"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>