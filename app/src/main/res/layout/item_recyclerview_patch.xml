<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardView"
    android:layout_margin="@dimen/card_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/patch_item_layout"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/components_padding"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatTextView
            style="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/patch_item_filename_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="@dimen/components_margin"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_plus"
                android:layout_width="@dimen/small_image_size"
                android:layout_height="@dimen/small_image_size" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/patch_item_addition_count_TV"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/components_margin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_minus"
                android:layout_width="@dimen/small_image_size"
                android:layout_height="@dimen/small_image_size" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/patch_item_deletion_count_TV"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>