<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:gravity="center_vertical"
    android:padding="@dimen/components_padding">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/followers_avatar_IV"
        android:layout_width="56dp"
        android:layout_height="56dp" />

    <LinearLayout
        android:layout_marginLeft="@dimen/components_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_place_grey_700_24dp"
                android:layout_width="18dp"
                android:layout_height="18dp" />

            <TextView
                android:id="@+id/followers_place_TV"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginLeft="@dimen/components_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_email"
                android:layout_width="18dp"
                android:layout_height="18dp" />

            <TextView
                android:id="@+id/followers_email_TV"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginLeft="@dimen/components_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_access_time"
                android:layout_width="18dp"
                android:layout_height="18dp" />

            <TextView
                android:id="@+id/followers_time_TV"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginLeft="@dimen/components_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>